<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/number_of_days_text_view"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/helvetica_bold"
        android:gravity="center"
        android:textColor="@color/numberOfDaysColor"
        android:textSize="50sp"
        tools:text="9" />

    <TextView
        android:id="@+id/desc_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="days from now you'll be the exact age J.R.R. Tolkien was when he composed The Book of the Foxrook, a 16-page codex marking one of his earliest experiments with an invented alphabet when he was 17 years, 5 months, and 7 days old." />
</LinearLayout>